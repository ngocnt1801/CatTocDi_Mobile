<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <ImageView
        android:id="@+id/salon_cover"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/salon1" />

    <EditText
        android:id="@+id/fg_home_phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/salon_cover"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-16dp"
        android:background="@drawable/border_radius_edit_text_fill_white"
        android:drawablePadding="@dimen/padding_icon_with_content_edit_text"
        android:drawableRight="@drawable/ic_search"
        android:elevation="4dp"
        android:hint="Số điện thoại khách hàng"
        android:padding="@dimen/padding_edit_text"
        android:textColor="@color/darkTextColor"
        android:textSize="14dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_below="@+id/fg_home_phone_et"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/fg_appointment_rv_item_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/fg_appointment_upcomming_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar_active"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Lịch sắp tới"
                android:textColor="@color/light" />

            <TextView
                android:id="@+id/fg_appointment_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkTextColor"
                android:layout_alignParentRight="true"
                android:text="18/10/2018" />

            <TextView
                android:id="@+id/fg_appointment_salon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fg_appointment_upcomming_tv"
                android:textColor="@color/darkTextColor"
                android:text="Godness Braids"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fg_appointment_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fg_appointment_salon_name"
                android:textColor="@color/darkTextColor"
                android:text="3:00PM" />

            <TextView
                android:id="@+id/fg_appointment_dot_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fg_appointment_salon_name"
                android:layout_marginHorizontal="8dp"
                android:layout_toRightOf="@id/fg_appointment_start_time"
                android:textColor="@color/darkTextColor"
                android:text="-" />

            <TextView
                android:id="@+id/fg_appointment_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fg_appointment_salon_name"
                android:layout_toRightOf="@id/fg_appointment_dot_tv"
                android:textColor="@color/darkTextColor"
                android:text="4:00PM" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>