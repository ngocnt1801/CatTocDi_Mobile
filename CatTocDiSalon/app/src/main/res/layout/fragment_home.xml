<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pd_layout_login_page"
    tools:context=".fragements.HomeFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/vn_search"
        android:drawableLeft="@drawable/ic_search_navigation"
        android:background="@drawable/border_radius_edit_text"
        android:padding="@dimen/pd_et"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vn_nearest_salon"/>
    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fg_home_rv">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>