<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="12dp"
    android:stateListAnimator="@drawable/click_effect_btn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/fg_home_rv_item_favorite_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_favorite_border" />

        <ImageView
            android:id="@+id/fg_home_rv_item_img"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/rv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fg_home_rv_item_img"
            android:layout_alignEnd="@id/fg_home_rv_item_img"
            android:background="#AA000000"
            android:padding="8dp"
            android:text="50% OFF"
            android:textColor="@color/textForDark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fg_home_rv_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/fg_home_rv_item_img"
            android:text="Bike Saller"
            android:textSize="16dp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/fg_home_rv_item_rb"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_home_rv_item_title_tv"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/fg_home_rv_item_img"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/secondLight"
            android:rating="4.5"
            android:secondaryProgressTint="@color/textLogin"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/fg_home_rv_item_amount_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_home_rv_item_title_tv"
            android:layout_toRightOf="@id/fg_home_rv_item_rb"
            android:text="(30)" />

        <TextView
            android:id="@+id/fg_home_rv_item_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_home_rv_item_rb"
            android:layout_toRightOf="@id/fg_home_rv_item_img"

            android:text="123 Võ Thị Sáu, Q.1" />

        <ImageView
            android:id="@+id/fg_home_rv_item_go_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fg_home_rv_item_time_tv"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@id/fg_home_rv_item_address_tv"
            android:src="@drawable/ic_go" />

        <TextView
            android:id="@+id/fg_home_rv_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_home_rv_item_rb"
            android:layout_toRightOf="@id/fg_home_rv_item_go_ic"
            android:text="20 phút" />

        <Button
            android:id="@+id/btn_book_service"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/fg_home_rv_item_address_tv"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/fg_home_rv_item_img"
            android:background="@drawable/ripple_btn"
            android:clickable="true"
            android:stateListAnimator="@drawable/click_effect_btn"
            android:text="@string/vn_book_appointment"
            android:textAllCaps="false"
            android:textColor="@color/light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>