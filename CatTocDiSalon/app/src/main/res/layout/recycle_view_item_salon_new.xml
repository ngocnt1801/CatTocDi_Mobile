<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="220dp"
            android:layout_height="140dp"
    android:id="@+id/fg_home_rv_item_img"
    android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
    android:elevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:paddingLeft="12dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textForDark"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Cửa hàng 1"
            android:id="@+id/fg_home_rv_item_title_tv"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quận 1, Nguyễn Huệ"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/textForDark"
            android:id="@+id/fg_home_rv_item_address_tv"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/secondLight"
                android:secondaryProgressTint="@color/textLogin"
                android:rating="3"
                android:numStars="5"
                android:stepSize="0.5"
                style="@style/RatingSmall"
                android:id="@+id/fg_home_rv_item_rb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(30)"
                android:textColor="@color/textForDark"
                android:id="@+id/fg_home_rv_item_amount_review_tv"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>