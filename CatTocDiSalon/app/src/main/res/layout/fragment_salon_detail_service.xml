<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragements.SalonDetailServiceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/salon_service_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
        <LinearLayout
            android:id="@+id/title_working_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/salon_service_recycle_view"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="GIỜ LÀM VIỆC"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="bold"/>
        </LinearLayout>
        <TableLayout
            android:id="@+id/tbl_working_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_working_hour"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">

            <TableRow android:layout_marginVertical="2dp">

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="Thứ 2:"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="7:00AM"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="-"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="9:00PM"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginVertical="2dp">

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="Thứ 6:"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="7:00AM"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="-"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="9:00PM"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginVertical="2dp">

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="Thứ 7:"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="7:00AM"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="-"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="9:00PM"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow android:layout_marginVertical="2dp">

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="CN:"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="7:00AM"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="-"
                    android:textSize="16dp" />

                <TextView
                    android:layout_marginHorizontal="4dp"
                    android:text="9:00PM"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>


    </RelativeLayout>

