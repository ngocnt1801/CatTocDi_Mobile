        <!-- Cover Image -->
        <ImageView
            android:focusableInTouchMode="true"
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/salon_pic1" />
