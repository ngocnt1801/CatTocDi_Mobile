<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingHorizontal="12dp"
    android:clipToPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/frame_promotion_title">
        <TextView
            android:id="@+id/promotion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:textColor="#000"
            android:text="Black week for sale"/>
        <TextView
            android:id="@+id/promotion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/promotion_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:text="Làm đẹp đồng giá chỉ với 100k"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:elevation="8dp"
            android:textStyle="bold"
            android:text="12/8 - 15/8"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:layout_below="@id/promotion_description"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>
    <TableLayout
        android:id="@+id/tbl_promotion_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_promotion_title"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="12dp"
        android:stretchColumns="0">
        <TableRow android:layout_marginVertical="2dp">
            <TextView
                android:text="Cắt tóc nam"
                android:textSize="16dp" />
            <TextView
                android:text="30% Off"
                android:textSize="16dp" />
        </TableRow>
        <TableRow android:layout_marginVertical="2dp">
            <TextView
                android:text="Cạo râu"
                android:textSize="16dp" />
            <TextView
                android:text="30% Off"
                android:textSize="16dp" />
        </TableRow>
        <TableRow android:layout_marginVertical="2dp">
            <TextView
                android:text="Rái tay"
                android:textSize="16dp" />
            <TextView
                android:text="20% Off"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_below="@id/tbl_promotion_detail"
        android:layout_marginTop="12dp"
        />
</RelativeLayout>