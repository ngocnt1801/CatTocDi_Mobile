<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_show_search_service"
    android:background="@color/textForDark">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fg_search_service"
        android:background="@color/textForDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dịch vụ"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/textForLight"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:foregroundGravity="center"
                    android:layout_marginLeft="32dp"
                    />
            </android.support.v7.widget.CardView>
        <!--<Button android:id="@+id/btn_get_service"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/mainDark"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:text="Chọn dịch vụ"
            />-->
        <Button
            android:layout_marginTop="@dimen/mg_top_login_page"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/vn_service"
            android:textColor="@color/textForDark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_margin="16dp"
            android:textSize="@dimen/ts_button_login_page"
            android:stateListAnimator="@drawable/click_effect_btn"
            android:theme="@style/MyButton"
            android:id="@+id/btn_get_service"/>


    </LinearLayout>
</LinearLayout>