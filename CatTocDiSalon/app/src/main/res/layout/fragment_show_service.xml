<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_show_search_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textForDark">

    <LinearLayout
        android:id="@+id/fg_search_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textForDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Dịch vụ"
            android:textColor="@color/textForLight"
            android:textSize="18dp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:clipToPadding="false"
                android:foregroundGravity="center" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_get_service"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:layout_marginBottom="@dimen/mr_bottom_not_cover_content"
            android:layout_marginTop="@dimen/mg_top_login_page"
            android:stateListAnimator="@drawable/click_effect_btn"
            android:text="@string/vn_service"
            android:textColor="@color/textForDark"
            android:textSize="@dimen/ts_button_login_page"
            android:textStyle="bold"
            android:theme="@style/MyButton" />


    </LinearLayout>
</LinearLayout>