<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragements.EditProfileFragment">

    <FrameLayout
        android:id="@+id/activity_proflie"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_account_circle_black_24dp"
           android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhi Nguyen"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:textSize="23dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sdt: 0967776167"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:textSize="17dp">
        </TextView>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/activity_proflie_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="18dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:textStyle="bold"
            android:textSize="16dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="65dp"
            android:textStyle="bold"
            android:textSize="16dp">

        </TextView>
        <EditText
            android:id="@+id/edit_proifile_fname_edt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Nhi"
            android:padding="@dimen/pd_et"
            android:background="@drawable/border_radius_edit_text"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/edit_proifile_lname_edt"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:hint="Nguyen"
            android:padding="@dimen/pd_et"
            android:background="@drawable/border_radius_edit_text"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="195dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:textStyle="bold"
            android:textSize="16dp">

        </TextView>
        <EditText
            android:id="@+id/edit_proifile_phone_edt"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="0967776167"
            android:padding="@dimen/pd_et"
            android:background="@drawable/border_radius_edit_text"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/textForLight"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:textStyle="bold"
            android:textSize="16dp">

        </TextView>
        <EditText
            android:id="@+id/edit_proifile_mail_edt"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="abc@gmail.com"
            android:padding="@dimen/pd_et"
            android:background="@drawable/border_radius_edit_text"
            android:layout_marginTop="285dp"
            android:layout_marginLeft="20dp"/>
        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@color/mainDark"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="370dp"
            android:text="Chỉnh sửa thông tin"
            android:textSize="@dimen/ts_button_login_page"
            android:textColor="@color/textForDark"/>

    </FrameLayout>

</FrameLayout>