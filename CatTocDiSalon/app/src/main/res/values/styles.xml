<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainPrimary</item>
        <item name="colorPrimaryDark">@color/mainDark</item>
        <item name="colorAccent">@color/secondPrimary</item>
    </style>
    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_gradient_background</item>
    </style>
    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:colorControlNormal">@color/secondLight</item>
        <item name="android:colorControlActivated">@color/secondPrimary</item>
        <item name="android:textAlignment">textStart</item>
    </style>
</resources>
